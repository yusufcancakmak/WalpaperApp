<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WallpaperApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize" >.01sp</item>
        <item name="android:alpha">0.0</item>
        <item name="actionTextColorAlpha">0</item>
    </style>
    <style name="Toolbar.TitleText.Expanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_20sdp</item>

    </style>
    <style name="Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="tabGravity">center</item>
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="roundedImageView" parent="">
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>
</resources>